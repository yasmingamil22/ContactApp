<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main2Activity">

        <ImageView
            android:id="@+id/im_person"
            android:layout_width="match_parent"
            android:layout_height="278dp"
            android:background="#4dd0e1"
            android:fitsSystemWindows="true"
            android:src="@drawable/ic_person_black_24dp" />
    <LinearLayout
        android:layout_margin="12dp"
        android:layout_width="match_parent"
        android:background="#4dd0e1"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
<ImageButton
    android:layout_marginTop="8dp"
    android:layout_marginLeft="5dp"
    android:background="#4dd0e1"
    android:id="@+id/im_b_ex"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_arrow"/>
<TextView
    android:layout_marginLeft="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#ffff"
    android:text="Add new contact"
    android:textSize="25dp"/>
        <ImageButton
            android:layout_marginTop="5dp"
            android:layout_marginLeft="60dp"
            android:background="#4dd0e1"
            android:id="@+id/im_b_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_done"/>

    </LinearLayout>
<LinearLayout
    android:id="@+id/ln_kind"
    android:layout_margin="30dp"
    android:layout_below="@+id/im_person"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView

        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:src="@drawable/kindnum"
        app:civ_border_width="2dp"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:layout_margin="4dp"
        app:civ_circle_background_color="#80000000"
        app:civ_border_color="#FFFCFC"/>
    <EditText
        android:id="@+id/et_kindNum"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint=" saving to "
        android:layout_marginLeft="20dp"
        android:padding="5dp"
        android:layout_marginTop="5dp"/>

</LinearLayout>
    <LinearLayout
        android:id="@+id/ln_name"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/ln_kind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_width="2dp"
            android:layout_marginLeft="5dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/name"
            android:padding="5dp"
            android:layout_margin="4dp"
            app:civ_border_color="#FFFCFC"/>
        <EditText
            android:id="@+id/et_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint=" name "
            android:layout_marginLeft="20dp"
            android:padding="5dp"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/ln_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_width="2dp"
            android:layout_marginLeft="5dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/number"
            android:padding="5dp"
            android:layout_margin="4dp"
            app:civ_border_color="#FFFCFC"/>
        <EditText
            android:id="@+id/et_number"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint=" number "
            android:layout_marginLeft="20dp"
            android:padding="5dp"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

</RelativeLayout>